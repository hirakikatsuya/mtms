<div class="input-group">
  <%= form_with url:search_path,method: :get,class:"input-group-append" do |f| %>
    <%= f.text_field :content,class:"form-control",placeholder: "キーワードを入力" %>
    <%= f.select :model,options_for_select({"ユーザー"=>"user","トレーニング"=>"training","グループ"=>"group"}),class:"form-control" %>
    <%= button_tag type: 'submit', class: "btn follow-btn btn-primary" do %>
      <i class="fas fa-search"></i>  検索
    <% end %>
  <% end %>
</div>