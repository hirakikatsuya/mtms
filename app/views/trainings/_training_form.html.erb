<%= form_with model:training do |f| %>
  <div class="form-group">
    <%= f.label "トレーニング日" %>
    <%= f.date_field:training_day %>
  </div>
  <div class="form-group">
    <%= f.label "トレーニング画像" %>
    <%= f.file_field:training_image,accept:"image/*" %>
  </div>
  <div class="form-group">
    <%= f.label "タイトル" %><br>
    <%= f.text_field:title,class:"form-control" %>
  </div>
  <div class="form-group">
    <%= f.label "トレーニング内容" %><br>
    <%= f.text_area:body,class:"form-control",rows:"10" %>
  </div>
  <div class="form-group">
    <%= f.submit "登録" ,class:"btn btn-danger" %>
  </div>
<% end %>