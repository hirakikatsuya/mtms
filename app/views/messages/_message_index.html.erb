<div id="messages">
  <% @messages.each do |message|%>
    <% if message.user_id==current_user.id%>
      <div class="mycomment">
        <p><%= message.message %></p>
      </div>
    <% else %>
      <div class="fukidasi">
        <div class="faceicon">
          <%= image_tag user.get_profile_image %>
        </div>
        <div class="chatting">
          <div class="says">
            <p><%= message.message %></p>
          </div>
        </div>
      </div>
    <% end %>
  <% end %>
</div>