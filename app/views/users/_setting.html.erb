<% unless user.name=="guestuser" %>
  <div>
    <% if user==current_user %>
      <div>
        <%= link_to edit_user_path(user.id),class:"btn btn-outline-secondary btn-block mb-2" do %>
          <i class="fas fa-user-cog"></i>
        <% end %>
      </div>
    <% else %>
      <div>
        <% if current_user != user && current_user.following?(user) && user.following?(current_user) %>
          <%= link_to "メッセージを始める",messages_path(user.id),class:"btn btn-primary mb-2" %>
        <% end %>
      </div>
      <div>
        <% if current_user.following?(user) %>
          <%= link_to "フォロー外す",user_relationships_path(user.id),method: :delete,class:"btn btn-secondary mb-2" %>
        <% else %>
          <%= link_to "フォローする",user_relationships_path(user.id),method: :post,class:"btn btn-md btn-info mb-2" %>
        <% end %>
      </div>
    <% end %>
    <div>
      <% if current_user.admin? && user!=current_user && user.is_deleted==false %>
        <%= link_to "利用停止する",suspend_user_path,method: :patch,"data-confirm"=>"本当に利用停止しますか？",class:"btn btn-danger" %>
      <% elsif current_user.admin? && user!=current_user && user.is_deleted==true %>
        <%= link_to "利用停止を解除する",unsuspend_user_path,method: :patch,"data-confirm"=>"本当に利用停止を解除しますか？",class:"btn btn-success" %>
      <% end %>
    </div>
  </div>
<% end %>