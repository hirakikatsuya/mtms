<div id="messages">
  <% group_chats.each do |chat| %>
    <% if chat.user_id==current_user.id %>
      <div class="mycomment">
        <p><%= chat.chat %></p>
      </div>
    <% else %>
      <div class="fukidasi">
        <div class="faceicon">
          <%= image_tag chat.user.get_profile_image %>
        </div>
        <div class="chatting">
          <div class="says">
            <p><%= chat.chat %></p>
          </div>
        </div>
      </div>
    <% end %>
  <% end %>
</div>