<div class="container">
  <div class="row">
    <div class="mx-auto col-sm-12 col-md-8 col-lg-5 px-5 px-sm-0">
      <h2>ユーザー情報</h2>
      <%= render 'layouts/error',error:@user %>
      <%= form_with model:@user do |f| %>
        <div class="form-group">
          <%= f.label:"ユーザーネーム" %>
          <%= f.text_field:name,class:"form-control" %>
        </div>
        <div class="form-group">
          <%= f.label:"ユーザーアイコン" %><br>
          <%= f.file_field:profile_image,accept:"image/*" %>
        </div>
        <div class="form-group">
          <%= f.label:"紹介文" %>
          <%= f.text_area:introduction,class:"form-control" %>
        </div>
        <div class="form-group">
          <%= f.submit "更新",class:"btn btn-md btn-success" %>
        </div>
      <% end %>
    </div>
  </div>
</div>
