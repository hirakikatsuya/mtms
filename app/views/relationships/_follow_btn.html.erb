<% unless current_user == user || user.name == "guestuser" %>
  <% if current_user.following?(user) %>
    <%= link_to "フォロー解除",user_relationships_path(user),method: :delete,class:"btn btn-secondary",remote:true %>
  <% else %>
    <%= link_to "フォロー",user_relationships_path(user),method: :post,class:"btn btn-info",remote:true %>
  <% end %>
<% end %>