<h3>"<%= @content %>"の検索結果</h3>
<% if @model=='user' %>
  <table class="table table-hover table-inverse">
    <thead>
      <tr>
        <th>ユーザー</th>
        <th>自己紹介</th>
        <th>フォロー</th>
        <th>フォロワー</th>
        <th></th>
      </tr>
    </thead>
    <tbody>
      <% @records.each do |user| %>
      <tr>
        <td>
          <%= link_to user_path(user.id) do %>
            <%= image_tag user.get_profile_image,size:"50x50" %>
            <%= user.name %>
          <% end %>
        </td>
        <td><%= user.introduction %></td>
        <td><%= user.followings.count %></td>
        <td><%= user.followers.count %></td>
        <td>
          <% unless current_user == user %>
            <% if current_user.following?(user) %>
              <%= link_to "フォロー外す",user_relationships_path(user.id),method: :delete,class:"btn btn-secondary" %>
            <% else %>
              <%= link_to "フォローする",user_relationships_path(user.id),method: :post,class:"btn btn-info" %>
            <% end %>
          <% end %>
        </td>
      </tr>
      <% end %>
    </tbody>
  </table>
<% else %>
    <table class="table table-hover table-inverse">
    <thead>
      <tr>
        <th>ユーザー</th>
        <th>タイトル</th>
        <th>コメント数</th>
        <th>いいね数</th>
      </tr>
    </thead>
    <tbody>
      <% @records.each do |training| %>
      <tr>
        <td>
          <%= link_to user_path(training.user.id) do %>
            <%= image_tag training.user.get_profile_image,size:"50x50" %>
            <%= training.user.name %>
          <% end %>
        </td>
        <td><%= link_to training.title,training_path(training.id) %></td>
        <td><%= training.comments.count %></td>
        <td id="favorite-btn<%= training.id %>">
          <%= render 'favorites/favorite',training:training %>
        </td>
      </tr>
      <% end %>
    </tbody>
  </table>
<% end %>