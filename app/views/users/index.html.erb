<div class="container px-5 px-sm-0">
  <div class="row">
    <div class="col-md-3">
      <%= render 'users/info',user:current_user %>
      <%= render 'users/setting',user:current_user %>
    </div>
    <div class="col-md-8 offset-md-1">
      <h2>ユーザー一覧</h2>
      <table class="table">
        <thead>
          <tr>
            <th>ユーザー</th>
            <th>フォロー</th>
            <th>フォロワー</th>
            <th></th>
          </tr>
        </thead>
        <tbody>
          <% @users.each do |user| %>
            <tr>
              <td>
                <%= link_to user_path(user.id) do %>
                  <%= image_tag user.get_profile_image,size:"50x50" %>
                  <%= user.name %>
                <% end %>
              </td>
              <td><%= user.followings.count %></td>
              <td><%= user.followers.count %></td>
              <td>
                <% unless current_user == user %>
                  <% if current_user.following?(user) %>
                    <%= link_to "フォロー外す",user_relationships_path(user.id),method: :delete,class:"btn btn-secondary" %>
                  <% else %>
                    <%= link_to "フォローする",user_relationships_path(user.id),method: :post,class:"btn btn-info" %>
                  <% end %>
                <% end %>
              </td>
            </tr>
          <% end %>
        </tbody>
      </table>
    </div>
  </div>
</div>