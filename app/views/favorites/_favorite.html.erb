<% if training.favorited_by?(current_user) %>
  <%= link_to training_favorites_path(training),method: :delete,class:"text-danger",remote:true do %>
    ♥<%= training.favorites.count %>
  <% end %>
<% else %>
  <%= link_to training_favorites_path(training),method: :post,class:"text-primary",remote:true do %>
    ♥<%= training.favorites.count %>
  <% end %>
<% end %>